@using Turnstile.Web.Models.PublisherConfig;

@{
    ViewData["Title"] = "Basic setup | Turnstile";
}

@model BasicConfigurationViewModel

<h1>Basic setup</h1>
<lead>Tell Turnstile a little about your app and your business so it can help guide your users.</lead>
<hr />

<div id="configAlerts">
    @if (Model.IsConfigurationSaved)
    {
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </svg>
            <div style="margin-left: 5px">
                <span>Setup complete.</span>
            </div>
        </div>
    }
    else if (Model.HasValidationErrors)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-octagon-fill" viewBox="0 0 16 16">
                <path d="M11.46.146A.5.5 0 0 0 11.107 0H4.893a.5.5 0 0 0-.353.146L.146 4.54A.5.5 0 0 0 0 4.893v6.214a.5.5 0 0 0 .146.353l4.394 4.394a.5.5 0 0 0 .353.146h6.214a.5.5 0 0 0 .353-.146l4.394-4.394a.5.5 0 0 0 .146-.353V4.893a.5.5 0 0 0-.146-.353L11.46.146zm-6.106 4.5L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
            </svg>
            <div style="margin-left: 5px">
                <span>Please review errors below.</span>
            </div>
        </div>
    }
</div>

<form method="post">
    <div class="mb-3">
        <label asp-for="@Model.TurnstileName" class="form-label"></label>&nbsp;<span class="text-danger">*</span>
        <input asp-for="@Model.TurnstileName" class="form-control" type="text" aria-describedby="turnstileNameHelp" />
        <span asp-validation-for="@Model.TurnstileName" class="text-danger"></span>
        <div id="turnstileNameHelp" class="form-text">The name of the SaaS app that Turnstile will be managing seats for</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.AppUrl" class="form-label"></label>&nbsp;<span class="text-danger">*</span>
        <input asp-for="@Model.AppUrl" class="form-control" type="url" aria-describedby="appUrlHelp" />
        <span asp-validation-for="@Model.AppUrl" class="text-danger"></span>
        <div id="appUrlHelp" class="form-text">The SaaS app's main URL</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.PublisherName" class="form-label"></label>&nbsp;<span class="text-danger">*</span>
        <input asp-for="@Model.PublisherName" class="form-control" type="text" aria-describedby="publisherNameHelp" />
        <span asp-validation-for="@Model.PublisherName" class="text-danger"></span>
        <div id="publisherNameHelp" class="form-text">The name of the SaaS app's publisher</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.HomePageUrl" class="form-label"></label>&nbsp;<span class="text-danger">*</span>
        <input asp-for="@Model.HomePageUrl" class="form-control" type="url" aria-describedby="homePageHelp" />
        <span asp-validation-for="@Model.HomePageUrl" class="text-danger"></span>
        <div id="homePageHelp" class="form-text">The URL of the SaaS app publisher's home page</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ContactPageUrl" class="form-label"></label>
        <input asp-for="@Model.ContactPageUrl" class="form-control" type="url" aria-describedby="contactPageHelp" />
        <span asp-validation-for="@Model.ContactPageUrl" class="text-danger"></span>
        <div id="contactPageHelp" class="form-text">The URL of the SaaS app publisher's contact page</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.PrivacyNoticePageUrl" class="form-label"></label>
        <input asp-for="@Model.PrivacyNoticePageUrl" class="form-control" type="url" aria-describedby="privacyNoticePageHelp" />
        <span asp-validation-for="@Model.PrivacyNoticePageUrl" class="text-danger"></span>
        <div id="privacyNoticePageHelp" class="form-text">The URL of the SaaS app publisher's privacy notice page</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ContactSalesUrl" class="form-label"></label>
        <input asp-for="@Model.ContactSalesUrl" class="form-control" type="url" aria-describedby="salesPageHelp" />
        <span asp-validation-for="@Model.ContactSalesUrl" class="text-danger"></span>
        <div id="salesPageHelp" class="form-text">The URL of the SaaS app's sales page</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ContactSupportUrl" class="form-label"></label>
        <input asp-for="@Model.ContactSupportUrl" class="form-control" type="url" aria-describedby="supportPageHelp" />
        <span asp-validation-for="@Model.ContactSupportUrl" class="text-danger"></span>
        <div id="supportPageHelp" class="form-text">The URL of the SaaS app's support page</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ContactSalesEmail" class="form-label"></label>
        <input asp-for="@Model.ContactSalesEmail" class="form-control" type="email" aria-describedby="salesEmailHelp" />
        <span asp-validation-for="@Model.ContactSalesEmail" class="text-danger"></span>
        <div id="salesEmailHelp" class="form-text">Email for sales-related questions</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ContactSupportEmail" class="form-label"></label>
        <input asp-for="@Model.ContactSupportEmail" class="form-control" type="email" aria-describedby="supportEmailHelp" />
        <span asp-validation-for="@Model.ContactSupportEmail" class="text-danger"></span>
        <div id="supportEmailHelp" class="form-text">Email for support-related questions</div>
    </div>
    <hr />
    <div style="margin-top: 20px; margin-bottom: 20px">
        <button type="submit" class="btn btn-primary">Complete setup</button>
    </div>
</form>
