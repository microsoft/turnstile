@using Turnstile.Web.Admin.Models.PublisherConfig

@model ClaimsConfigurationViewModel

@{
    ViewData["Title"] = "Claims configuration | Turnstile";
}

<h1>Claims configuration</h1>
<lead>Configure the claim types Turnstile will use to identify key user properties. Enter a comma-delimited list of claim types for each field, and Turnstile will check them in order until it finds a match in the user's token.</lead>
<hr />

<div id="configAlerts">
    @if (Model.IsConfigurationSaved)
    {
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </svg>
            <div style="margin-left: 5px">
                <span>Claims configuration saved.</span>
            </div>
        </div>
    }
    else if (Model.HasValidationErrors)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-octagon-fill" viewBox="0 0 16 16">
                <path d="M11.46.146A.5.5 0 0 0 11.107 0H4.893a.5.5 0 0 0-.353.146L.146 4.54A.5.5 0 0 0 0 4.893v6.214a.5.5 0 0 0 .146.353l4.394 4.394a.5.5 0 0 0 .353.146h6.214a.5.5 0 0 0 .353-.146l4.394-4.394a.5.5 0 0 0 .146-.353V4.893a.5.5 0 0 0-.146-.353L11.46.146zm-6.106 4.5L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
            </svg>
            <div style="margin-left: 5px">
                <span>Please review errors below.</span>
            </div>
        </div>
    }
</div>

<form method="post">
    <div class="mb-3">
        <label asp-for="@Model.UserIdClaimTypes" class="form-label"></label>&nbsp;<span class="text-danger">*</span>
        <input asp-for="@Model.UserIdClaimTypes" class="form-control" type="text" aria-describedby="userIdClaimHelp" />
        <span asp-validation-for="@Model.UserIdClaimTypes" class="text-danger"></span>
        <div id="userIdClaimHelp" class="form-text">Enter a comma-delimited list of claim types used to identify the user’s unique ID. Turnstile will check each claim in the list, in order, until it finds a matching claim in the user's token.</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.UserNameClaimTypes" class="form-label"></label>&nbsp;<span class="text-danger">*</span>
        <input asp-for="@Model.UserNameClaimTypes" class="form-control" type="text" aria-describedby="userNameClaimHelp" />
        <span asp-validation-for="@Model.UserNameClaimTypes" class="text-danger"></span>
        <div id="userNameClaimHelp" class="form-text">
            Enter a comma-delimited list of claim types used to identify the user’s name. Turnstile will check each claim in the list, in order, until it finds a matching claim in the user's token.
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.TenantIdClaimTypes" class="form-label"></label>&nbsp;<span class="text-danger">*</span>
        <input asp-for="@Model.TenantIdClaimTypes" class="form-control" type="text" aria-describedby="tenantIdClaimHelp" />
        <span asp-validation-for="@Model.UserNameClaimTypes" class="text-danger"></span>
        <div id="tenantIdClaimHelp" class="form-text">
            Enter a comma-delimited list of claim types used to identify the user’s tenant ID. Turnstile will check each claim in the list, in order, until it finds a matching claim in the user's token.
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.EmailClaimTypes" class="form-label"></label>&nbsp;<span class="text-danger">*</span>
        <input asp-for="@Model.EmailClaimTypes" class="form-control" type="text" aria-describedby="emailClaimHelp" />
        <span asp-validation-for="@Model.EmailClaimTypes" class="text-danger"></span>
        <div id="emailClaimHelp" class="form-text">
            Enter a comma-delimited list of claim types used to identify the user’s email address. Turnstile will check each claim in the list, in order, and return the first valid email address.
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.RoleClaimTypes" class="form-label"></label>&nbsp;<span class="text-danger">*</span>
        <input asp-for="@Model.RoleClaimTypes" class="form-control" type="text" aria-describedby="roleClaimHelp" />
        <span asp-validation-for="@Model.EmailClaimTypes" class="text-danger"></span>
        <div id="roleClaimHelp" class="form-text">
            Enter a comma-delimited list of claim types used to identify the user’s roles. Turnstile will check each claim in the list, in order, until it finds a matching claim in the user's token.
        </div>
    </div>
    <hr />
    <div style="margin-top: 20px; margin-bottom: 20px">
        <button type="submit" class="btn btn-primary">Save settings</button>
    </div>
</form>