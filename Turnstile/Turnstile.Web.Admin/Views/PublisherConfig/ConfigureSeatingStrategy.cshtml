@using Turnstile.Web.Admin.Models.PublisherConfig;

@{
    ViewData["Title"] = "Seating strategy | Turnstile";
}

@model SeatingConfigurationViewModel

<h1>Seating strategy</h1>
<lead>Each subscription has its own seating configuration allowing you to customize how seats are managed on a subscription-by-subscription basis. Unless otherwise specified when a subscription is created, this configuration will be applied to all new subscriptions.</lead>
<hr />

<div id="configAlerts">
    @if (Model.IsConfigurationSaved)
    {
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </svg>
            <div style="margin-left: 5px">
                <span>Seating strategy saved.</span>
            </div>
        </div>
    }
    else if (Model.HasValidationErrors)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-octagon-fill" viewBox="0 0 16 16">
                <path d="M11.46.146A.5.5 0 0 0 11.107 0H4.893a.5.5 0 0 0-.353.146L.146 4.54A.5.5 0 0 0 0 4.893v6.214a.5.5 0 0 0 .146.353l4.394 4.394a.5.5 0 0 0 .353.146h6.214a.5.5 0 0 0 .353-.146l4.394-4.394a.5.5 0 0 0 .146-.353V4.893a.5.5 0 0 0-.146-.353L11.46.146zm-6.106 4.5L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
            </svg>
            <div style="margin-left: 5px">
                <span>Please review errors below.</span>
            </div>
        </div>
    }
</div>

<form method="post">
    <div class="mb-3 form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" asp-for="@Model.LimitedOverflowSeatingEnabled" aria-described-by="limitedSeatHelp" />
        <label asp-for="@Model.LimitedOverflowSeatingEnabled" class="form-check-label"></label>
        <div id="limitedSeatHelp" class="form-text">Indicates whether or not limited seats should be provided when there are no more standard seats available.</div>
    </div>
    <hr />
    <div style="margin-top: 20px; margin-bottom: 20px">
        <button type="submit" class="btn btn-primary">Save settings</button>
    </div>
</form>
